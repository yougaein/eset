{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (C)",
            "type": "shell",
            "command": "gcc",
            "options": {
                "shell": {
                    "executable": "/bin/zsh",
                }
            },
            "args": [
                "-Wall",
                "-Wextra",
                "-O0",
                "-g3",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-lm"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build (C++)",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "/bin/zsh",
                }
            },
            "command": "g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-O0",
                "-g3",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "${file}",
                "-lm",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        }
    ]
}